@using PeaLearning.Website.Extensions;
@using PeaLearning.Website.Models.MyAccount;
@model UserStatisticModel

<section class="bg-profile d-table w-100 bg-primary" style="background: url('/Images/account/bg.png') center center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card public-profile border-0 rounded shadow" style="z-index: 1;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-10 col-md-9">
                                <div class="row align-items-end">
                                    <div class="col-md-7 text-md-left text-center mt-4 mt-sm-0">
                                        <h3 class="title mb-0">@Model.DisplayName</h3>
                                        <small class="text-muted h6 mr-2">@Model.Email</small>
                                        @if (!string.IsNullOrEmpty(Model.Phone))
                                        {
                                            <ul class="list-inline mb-0 mt-3">
                                                <li class="list-inline-item mr-2">
                                                    <a href="javascript:void(0)" class="text-muted" title="Phone">
                                                        <i data-feather="phone" class="fea icon-sm mr-2"></i>@Model.Phone
                                                    </a>
                                                </li>
                                            </ul>
                                        }
                                    </div><!--end col-->
                                </div><!--end row-->
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--ed container-->
</section><!--end section-->